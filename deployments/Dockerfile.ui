# ================================
# Stage 1: Build Stage
# ================================
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files for dependency installation
COPY package*.json ./

# Copy NX workspace configuration files (required for NX to work)
COPY nx.json ./
COPY tsconfig*.json ./

# Copy ONLY the UI app (not api-py or api - they're separate services)
COPY apps/ui ./apps/ui

# Install ALL dependencies (including devDependencies for build)
RUN npm install

# Build the UI app using NX (with verbose output)
RUN echo "=== Starting NX build ===" && \
    npx nx build ui --prod --verbose && \
    echo "=== NX build command completed ===" || \
    echo "=== NX build FAILED ==="

# Debug: Check what exists after build
RUN echo "=== Checking /app structure ===" && \
    ls -laR /app/apps 2>/dev/null || echo "No apps folder" && \
    echo "=== Looking for dist folders ===" && \
    find /app -type d -name "dist" 2>/dev/null || echo "No dist found" && \
    echo "=== Looking for index.html ===" && \
    find /app -name "index.html" 2>/dev/null || echo "No index.html found"

# ================================
# Stage 2: Production Stage
# ================================
FROM nginx:alpine

# Copy built static files from builder stage to nginx
# Build outputs to apps/dist/ui (based on webpack config relative path)
COPY --from=builder /app/apps/dist/ui /usr/share/nginx/html

# Copy nginx configuration (optional, for SPA routing)
# If you need custom nginx config, create it and uncomment:
# COPY deployments/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80 (nginx default)
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]